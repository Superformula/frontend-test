{
  "name": "frontend-test",
  "version": "1.0.0",
  "description": "Application created for the Superformula test",
  "main": "index.js",
  "repository": "git@github.com:Superformula/frontend-test.git",
  "author": "Paulo Caetano Virote de Souza <paulosouzav@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "webpack serve --config ./webpack.dev.js",
    "build": "webpack --config ./webpack.prod.js",
    "test": "jest -c ./tests/jest.config.json --watchAll --silent",
    "test:coverage": "jest -c ./tests/jest.config.json --watchAll --silent --coverage",
    "test:once": "cross-env CI=true jest -c ./tests/jest.config.json --silent",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test:once",
      "pre-push": "yarn run test:once"
    }
  },
  "dependencies": {
    "@apollo/client": "^3.3.6",
    "graphql": "^15.4.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.2.1",
    "styled-normalize": "^8.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@storybook/addon-actions": "^6.1.11",
    "@storybook/addon-essentials": "^6.1.11",
    "@storybook/addon-links": "^6.1.11",
    "@storybook/react": "^6.1.11",
    "@svgr/webpack": "^5.5.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "clean-webpack-plugin": "^3.0.0",
    "cors-anywhere": "^0.4.3",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.1",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.3",
    "prop-types": "^15.7.2",
    "react-svg-loader": "^3.0.3",
    "terser-webpack-plugin": "^4.2.3",
    "url-loader": "^4.1.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.7.2"
  }
}
