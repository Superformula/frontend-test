{
  "name": "learn-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier \"{pages,src}/**/*.{js,jsx,css,ts,tsx}\"",
    "format": "yarn run prettier --write",
    "test:format": "yarn run prettier --check",
    "test:lint": "eslint \"{pages,src}/**/*.{ts,tsx}\"",
    "test:unit": "jest",
    "test": "yarn typecheck && yarn test:format && yarn test:lint && yarn test:unit",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build:gql-schema": "ts-node -r dotenv/config ./fetchSchema.ts dotenv_config_path=.env.local",
    "build:gql-codegen": "graphql-codegen --config codegen.yml",
    "build:gql": "yarn build:gql-schema && yarn build:gql-codegen"
  },
  "dependencies": {
    "@apollo/client": "^3.3.7",
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "got": "^11.8.1",
    "graphql": "^15.5.0",
    "next": "^10.0.0",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@emotion/babel-plugin": "^11.1.2",
    "@graphql-codegen/cli": "1.20.1",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "1.20.2",
    "@graphql-codegen/typescript-document-nodes": "1.17.9",
    "@graphql-codegen/typescript-graphql-files-modules": "1.18.1",
    "@graphql-codegen/typescript-operations": "^1.17.14",
    "@graphql-codegen/typescript-react-apollo": "2.2.1",
    "@storybook/addon-actions": "^6.1.15",
    "@storybook/addon-essentials": "^6.1.15",
    "@storybook/addon-links": "^6.1.15",
    "@storybook/react": "^6.1.15",
    "@svgr/webpack": "^5.5.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": ">=4",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,md}": "prettier --write"
  }
}
