{
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "react/prefer-stateless-function": [1, { "ignorePureComponents": false }],
    "no-confusing-arrow": ["off"],
    "import/no-extraneous-dependencies": [
      "error", { "devDependencies": true }
    ]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    }
  },
  "globals": {
    "react": true
  }
}
